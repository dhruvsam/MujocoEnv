<mujoco model="Leg3D">
  <compiler inertiafromgeom="true" angle="radian" coordinate="local"/>
  <option timestep="0.01" gravity="0 0 0" iterations="20" integrator="Euler"/>

  <default>
    <joint armature='0.04' damping="1" limited="true"/>
    <geom friction=".0 .0 .0" density="300" margin="0.002" condim="1" contype="0" conaffinity="0"/>
  </default>

  <worldbody>
    <light diffuse=".6 .5 .5" pos="0 0 3" dir="0 0 -1"/>


    <geom name="table" rgba= "0.2 0.7 0.2 1" type="plane" pos="0 0.5 -0.325 " size="1 1 0.1" contype="1" conaffinity="1"/>

    <!-- hip pan link location changed -->
    <body name="r_hip_pan_link" pos="0 -0.6 0.46">

      <!-- Yet to change-->
      <geom name="e1" type="capsule" rgba="0.6 0.6 0.6 1" fromto="-0.07 0  0.2 -0.3 0 0.25" size="0.04"/>
      <geom name="e2" type="capsule" rgba="0.6 0.6 0.6 1" fromto="0.07 0  0.2 0.3 0 0.25"  size="0.04"/>



      <!-- capsule for hip pan -->
      <geom name="sp" type="box" rgba="0.6 0.2 0.2 1" pos= "0 0 0" size="0.15 0.05 0.2" />

      <!--  Hip Pan Joint Location -->
      <joint name="r_hip_pan_joint" type="hinge" pos="0 0 0" axis="1 0 0" range="-0.9 0.9" damping="1.0" />

      <!-- hip lift link location changed -->
      <body name="r_hip_lift_link" pos="0 0 -0s.2">

        <!--  Capsule for hip link -->
        <geom name="sl" type="capsule"  rgba="0.2 0.6 0.2 1" fromto="0 -0.05 0 0 0.05 0" size="0.07" />
        <!--  Hip Lift Joint Location -->
        <joint name="r_hip_lift_joint" type="hinge" pos="0 0 0" axis="0 1 0" range="-0.785 0.785" damping="1.0" />

        <!-- Link for Thigh -->
        <body name="r_upper_thigh_roll_link" pos="0 0 0" >
          <!--  Capsule for roll link -->
          <geom name="utr" type="capsule" rgba="0.5 0.5 0 1" fromto="0 0 0.1 0 0 -0.1" size="0.02" />
          <!-- Joint to roll upper thigh y axis -->
          <joint name="r_upper_thigh_roll_joint" type="hinge" pos="0 0 0" axis="0 0 1" range="-1.5 1.7" damping="0.1" />
          <!-- upper thigh link -->
          <body name="r_upper_thigh_link"  pos="0 0 0">
            <geom name="ut" type="capsule" rgba="0.2 0.2 0.6 1" fromto="0 0 0 0 0 -0.4" size="0.06" />

            <!-- knee joint -->
            <body name="r_knee_flex_link"  pos="0 0 -0.4">
              <geom name="kf" type="capsule" rgba= "1 1 0 1" fromto="0 0 0.02 0.0 0 -0.02" size="0.06" />
              <joint name="r_knee_flex_joint" type="hinge" pos="0 0 0" axis="1 0 0" range="-2.3213 0" damping="0.1" />

              <!-- no roll joing in knee -->
        <!-- <body name="r_forearm_roll_link" pos="0 0 0">
                <geom name="fr" type="capsule" fromto="-0.1 0 0 0.1 0 0" size="0.02" />
                <joint name="r_forearm_roll_joint" type="hinge" limited="true" pos="0 0 0" axis="1 0 0" damping=".1" range="-1.5 1.5"/> -->

                <!-- leg link -->
                <body name="r_leg_link"  pos="0 0 0">
                  <geom name="fa" type="capsule" rgba="0.4 0.6 0.5 1" fromto="0 0 0 0 0 -0.291" size="0.05" />

                  <!-- ankle flex -->
                  <body name="r_ankle_flex_link" pos="0 0 -0.321">
                    <geom name="af" type="capsule" fromto="-0.02 0 0 0.02 0  0" size="0.01" />
                    <joint name="r_ankle_flex_joint" type="hinge" pos="0 0 0" axis="0 1 0" range="-1.094 0" damping=".1" />

                    <!-- ankle roll -->
                    <body name="r_ankle_roll_link" pos="0 0 0">
                      <joint name="r_ankle_roll_joint" type="hinge" pos="0 0 0" limited="true" axis="1 0 0" damping="0.1" range="-1.5 1.5"/>

                      <!-- foot -->
                      <body name="tips_foot"  pos="0 0 0">
                        <geom conaffinity="1" rgba="0.2 0.6 0.2 1" contype="1" name="tip_footl" pos="0 0 -0.017" size="0.12 0.05 0.05" type="box" />
                      </body>
                      <geom conaffinity="1" contype="1" fromto="0  0 0. 0.0 0 0.04" size="0.01" type="capsule" />
